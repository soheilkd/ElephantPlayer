<Button x:Class="Player.Controls.QuickButton" Loaded="Button_Loaded" Height="20" Width="20"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="P"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
		BorderThickness="0" Background="Transparent">
	<materialDesign:PackIcon 
		x:Name="MainIcon"
		Foreground="{Binding Foreground, ElementName=P}"
		Width="{Binding Width, ElementName=P}" 
		Height="{Binding Height, ElementName=P}"/>
</Button>
