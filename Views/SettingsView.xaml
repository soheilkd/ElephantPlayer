<ContentControl x:Class="Player.Views.SettingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:system="clr-namespace:System;assembly=mscorlib"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="StackPanel_Loaded">
	<StackPanel>
		<CheckBox Margin="5" x:Name="PlayOnPosCheck" Content="Resume On Position Change"/>
		<StackPanel Orientation="Horizontal" Margin="0 5 0 5">
			<Label Content="Vision Timeout" />
			<Slider x:Name="TimeoutSlider"  Minimum="0" Maximum="30" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="BottomRight" Width="150"/>
		</StackPanel>
		<GroupBox Header="Play Mode" Width="200" HorizontalAlignment="Left" Padding="5" Margin="5">
			<StackPanel>
				<RadioButton x:Name="PlayModeRadio1" Padding="5" GroupName="PlayModeGroup" Checked="PlayModeChanged" Tag="0" Content="Repeat All"/>
				<RadioButton x:Name="PlayModeRadio2" Padding="5" GroupName="PlayModeGroup" Checked="PlayModeChanged" Tag="1" Content="Repeat One"/>
				<RadioButton x:Name="PlayModeRadio3" Padding="5" GroupName="PlayModeGroup" Checked="PlayModeChanged" Tag="2" Content="Shuffle"/>
			</StackPanel>
		</GroupBox>
	</StackPanel>
</ContentControl>
