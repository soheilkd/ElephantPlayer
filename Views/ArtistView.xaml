<Grid x:Class="Player.Views.ArtistView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	  xmlns:controls="clr-namespace:Player.Controls">
    <DockPanel Height="100" VerticalAlignment="Top" >
        <Image x:Name="ArtistImage" Width="100" Height="100" Margin="5"/>
        <TextBlock Margin="5" x:Name="ArtistDescription" FontSize="16" FontFamily="Segoe UI Semibold" TextWrapping="Wrap" Foreground="#DDD"/>
    </DockPanel>
	<controls:MediaDataGrid x:Name="MediaDataGrid" Margin="0,0,0,20"/>
</Grid>
