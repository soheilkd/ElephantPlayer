<UserControl x:Class="Player.Views.AlbumContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200" MinWidth="300" VerticalAlignment="Bottom"
			 xmlns:controls="clr-namespace:Player.Controls">
    <Grid x:Name="MainGrid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="0"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Border BorderThickness="3" BorderBrush="{StaticResource WindowsColor}" Grid.RowSpan="2" Width="200">
			<Image x:Name="MainImage" />
		</Border>
		<TextBlock x:Name="MainTextBlock" Margin="5" FontSize="15" TextWrapping="Wrap" MaxHeight="60" Grid.Column="1"/>
		<controls:MediaList x:Name="MainList" Grid.Column="1" Grid.Row="1"/>
		<Border BorderThickness="0,3,0,3" BorderBrush="{StaticResource WindowsColor}" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
	</Grid>
</UserControl>
