<ContentControl x:Class="Player.Controls.Navigation.NavigationViewer"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
				Loaded="ContentControl_Loaded"
				xmlns:navigation="clr-namespace:Player.Controls.Navigation">
	<ContentControl.Template>
		<ControlTemplate TargetType="ContentControl">
			<Grid>
				<ContentPresenter x:Name="Presenter" Content="{TemplateBinding Content}"/>
				<navigation:NavigationControl x:Name="NavigationContent"/>
			</Grid>
		</ControlTemplate>
	</ContentControl.Template>
</ContentControl>
