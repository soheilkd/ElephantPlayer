<UserControl x:Class="Player.MediaView"
             BorderThickness="0"
             BorderBrush="#50FFFFFF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialicons="clr-namespace:MaterialIcons;assembly=MaterialIcons"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded" MouseDoubleClick="OutputCanvas_MouseDoubleClick"
             x:Name="OutputCanvas">
    <Grid>
        <Label Content="MainLabel" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="MainLabel" Foreground="White" FontWeight="Medium" FontSize="14" Margin="30,0,0,0"/>
        <Label Content="SubLabel" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top" x:Name="SubLabel" Foreground="White"/>
        <materialicons:MaterialIcon  x:Name="MainIcon" HorizontalAlignment="Left" Width="30" Icon="ic_music_note" Foreground="White"/>
    </Grid> 
</UserControl>
