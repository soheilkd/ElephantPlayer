<UserControl x:Class="Player.Controls.MaterialButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Player"
             xmlns:materialicons="clr-namespace:MaterialIcons;assembly=MaterialIcons"
             mc:Ignorable="d" 
             Height="26"
             Loaded="UserControl_Loaded">
    <Grid x:Name="MainGrid">
        <Ellipse x:Name="MainEllipse" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="28" StrokeThickness="2" Margin="-1,-1,0,-1" Fill="White"/>
        <materialicons:MaterialIcon x:Name="MainIcon" Foreground="Black" Background="#01FFFFFF"
                                MouseEnter="UXMouseEnter" MouseLeave="UXMouseLeave" PreviewMouseDown="UXMouseDown" PreviewMouseUp="UXMouseUp"
                                Icon="ic_radio_button_checked"/>
    </Grid>
</UserControl>
