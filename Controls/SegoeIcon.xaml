<UserControl x:Class="Player.Controls.SegoeIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             FontSize="22" x:Name="Parent" Width="22" Height="22"
             mc:Ignorable="d"  Foreground="Black">
    <Viewbox>
        <TextBlock x:Name="textBlock" FontFamily="Segoe MDL2 Assets" Text="{Binding ElementName=Parent, Path=GlyphString}"/>
    </Viewbox>
</UserControl>
