<Window x:Class="Player.LyricsView" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Player"
        xmlns:materialicons="clr-namespace:MaterialIcons;assembly=MaterialIcons"
        xmlns:controls1="clr-namespace:Player.Controls"
        mc:Ignorable="d"
        Title="LyricsView" Height="535" Width="350" Background="#FFD4D4D4">
    <Grid x:Name="MainGrid">
        <controls1:NumericUpDown x:Name="SizeUpDown" Margin="30,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Value="15" 
                                ValueChanged="FontSizeChange" Height="18" Minimum="4" Maximum="64" Width="97"/>
        <materialicons:MaterialIcon x:Name="FontSizeIcon" Icon="ic_format_size" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30"/>
        <ToggleButton Margin="0,5,0,0" Content="I" FontStyle="Italic" FontWeight="Bold" Height="19" x:Name="ItalicToggle"
                      VerticalAlignment="Top" HorizontalAlignment="Right" Width="19" Unchecked="ItalicToggled" Checked="ItalicToggled"/>
        <ToggleButton Margin="0,5,19,0" Content="B" FontWeight="Bold" Height="19" VerticalAlignment="Top"  x:Name="BoldToggle"
                      HorizontalAlignment="Right" Width="19" Unchecked="BoldToggled" Checked="BoldToggled"/>
        <ToggleButton Margin="0,5,38,0" FontWeight="Bold" Height="19" VerticalAlignment="Top"  x:Name="UnderlineToggle"
                      HorizontalAlignment="Right" Width="19" Unchecked="UnderlineToggled" Checked="UnderlineToggled">
            <TextBlock Text="U" TextDecorations="Underline" />
        </ToggleButton>
        <TextBox x:Name="MainViewer" TextWrapping="Wrap" IsReadOnly="True" AutoWordSelection="True" BorderThickness="0" VerticalScrollBarVisibility="Auto" Margin="0,29,0,0" Background="{x:Null}">
