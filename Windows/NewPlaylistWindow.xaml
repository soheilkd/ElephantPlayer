<Window x:Class="Player.Windows.NewPlaylistWindow" WindowStyle="ToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Title="New Playlist"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="64" Width="297">
    <Grid VerticalAlignment="Center">
		<Label Content="Name: "/>
		<TextBox x:Name="NameBox" MaxLength="10" Margin="50,0,50,0" FontSize="20"/>
		<Button HorizontalAlignment="Right" Content="Done" Click="Button_Click" Width="50"/>
	</Grid>
</Window>
